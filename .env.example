# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Pyrogram (required for downloads/thumbnails via MTProto)
# Get these from https://my.telegram.org/apps
API_ID=123456
API_HASH=your_api_hash_here

# Optional: seconds to wait for Pyrogram to become available at startup
# Increase if you see early "Client Pyrogram global non disponible" errors
PYRO_STARTUP_WAIT=8

# Database
DATABASE_URL=sqlite:///./bot_database.db

# SSO Configuration
WEBAPP_SSO_SECRET=your_super_secret_key_here_must_be_same_as_site
WEBAPP_BASE_URL=https://your-site.netlify.app

# For local development
# WEBAPP_BASE_URL=http://localhost:8888
